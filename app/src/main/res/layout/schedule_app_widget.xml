<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="8月9日"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:text="第1周    周四"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/weekName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title0"
            style="@style/schedule_header_tv"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_title0_1"
            style="@style/schedule_header_tv"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_title1"
            style="@style/schedule_header_tv"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_title2"
            style="@style/schedule_header_tv"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_title3"
            style="@style/schedule_header_tv"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_title4"
            style="@style/schedule_header_tv"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_title5"
            style="@style/schedule_header_tv"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_title6"
            style="@style/schedule_header_tv"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_title7"
            style="@style/schedule_header_tv"
            android:layout_width="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_schedule"
        tools:listitem="@layout/fragment_schedule"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null" />

</LinearLayout>