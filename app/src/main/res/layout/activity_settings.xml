<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/v_status"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="设置"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="@color/grey" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/settings_subtitle"
                android:text="主界面外观" />

            <LinearLayout
                android:id="@+id/ll_schedule_bg"
                style="@style/settings_item_ll">

                <TextView
                    style="@style/settings_item_tv_main"
                    android:text="课程表背景" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:alpha="0.5"
                android:background="@color/grey" />

            <LinearLayout style="@style/settings_item_ll"
                android:layout_marginBottom="-8dp">

                <TextView
                    style="@style/settings_item_tv_main"
                    android:text="课程格子高度" />

                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:text="56" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:text=" dp" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/sb_height"
                android:max="64"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:alpha="0.5"
                android:background="@color/grey" />

            <LinearLayout style="@style/settings_item_ll">

                <TextView
                    style="@style/settings_item_tv_main"
                    android:text="界面文字白色" />

                <Switch
                    android:id="@+id/s_text_white"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    android:switchMinWidth="48dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/switch_selector"
                    android:track="@drawable/switch_track" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:alpha="0.5"
                android:background="@color/grey" />

            <LinearLayout style="@style/settings_item_ll">

                <TextView
                    style="@style/settings_item_tv_main"
                    android:text="显示周日" />

                <Switch
                    android:id="@+id/s_show_weekend"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    android:switchMinWidth="48dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/switch_selector"
                    android:track="@drawable/switch_track" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:alpha="0.5"
                android:background="@color/grey" />

            <LinearLayout style="@style/settings_item_ll">

                <TextView
                    style="@style/settings_item_tv_main"
                    android:text="显示非本周课程" />

                <Switch
                    android:id="@+id/s_show"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    android:switchMinWidth="48dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/switch_selector"
                    android:track="@drawable/switch_track" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:alpha="0.5"
                android:background="@color/grey" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>