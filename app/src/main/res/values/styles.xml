<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
    </style>

    <style name="LoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:drawableBottom">@drawable/login_edittext_bottom</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textCursorDrawable">@drawable/login_edittext_cursor</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MainHeadDetailText">
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.65</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TermDataPicker">
        <item name="wheel_same_width">true</item>
        <item name="wheel_curtain">true</item>
        <item name="wheel_cyclic">true</item>
        <item name="wheel_curved">false</item>
        <item name="wheel_visible_item_count">3</item>
        <item name="wheel_curtain_color">#64ffffff</item>
        <item name="wheel_atmospheric">true</item>
        <item name="wheel_item_text_color">@color/white</item>
        <item name="wheel_selected_item_text_color">@color/white</item>
        <item name="wheel_item_text_size">20sp</item>
    </style>

    <style name="TimeDataPicker">
        <item name="android:layout_width">80dp</item>
        <item name="wheel_curtain">true</item>
        <item name="wheel_curved">false</item>
        <item name="wheel_visible_item_count">5</item>
        <item name="wheel_curtain_color">#64ff9393</item>
        <item name="wheel_atmospheric">true</item>
        <item name="wheel_item_text_color">@color/grey</item>
        <item name="wheel_selected_item_text_color">@android:color/black</item>
        <item name="wheel_item_text_size">14sp</item>
    </style>

    <style name="settings_subtitle">
        <item name="android:textColor">#929292</item>
        <item name="android:background">#f5f5f5</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="settings_item_ll">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="settings_item_tv_main">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
